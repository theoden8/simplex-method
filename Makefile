highlight :
	bash "/Users/Admin/apps/_src/C++/SmallProjects/_Graphics/matrix/_MakeGen/plugins/highlight/highlight.sh" "/Users/Admin/apps/_src/C++/SmallProjects/_Graphics/matrix/_MakeGen/plugins/highlight/"
